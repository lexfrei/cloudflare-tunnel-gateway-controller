{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "gatewayClassConfig": {
      "type": "object",
      "description": "GatewayClassConfig CRD configuration",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Create GatewayClassConfig resource",
          "default": false
        },
        "name": {
          "type": "string",
          "description": "Name of the GatewayClassConfig (defaults to release fullname)"
        },
        "cloudflareCredentialsSecretRef": {
          "type": "object",
          "description": "Reference to Secret containing Cloudflare API credentials",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the Secret"
            },
            "namespace": {
              "type": "string",
              "description": "Namespace of the Secret (defaults to release namespace)"
            },
            "key": {
              "type": "string",
              "description": "Key in the Secret containing the API token"
            }
          }
        },
        "tunnelID": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9-]*$",
          "description": "Cloudflare Tunnel ID"
        },
        "tunnelTokenSecretRef": {
          "type": "object",
          "description": "Reference to Secret containing tunnel token",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the Secret"
            },
            "namespace": {
              "type": "string",
              "description": "Namespace of the Secret"
            },
            "key": {
              "type": "string",
              "description": "Key in the Secret containing the tunnel token"
            }
          }
        },
        "cloudflared": {
          "type": "object",
          "description": "Cloudflared deployment configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable cloudflared deployment management",
              "default": false
            },
            "replicas": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of cloudflared replicas",
              "default": 1
            },
            "namespace": {
              "type": "string",
              "description": "Namespace for cloudflared deployment",
              "default": "cloudflare-tunnel-system"
            },
            "protocol": {
              "type": "string",
              "description": "Transport protocol",
              "enum": ["", "auto", "quic", "http2"]
            },
            "awg": {
              "type": "object",
              "description": "AmneziaWG sidecar configuration",
              "properties": {
                "secretName": {
                  "type": "string",
                  "description": "Secret name containing AWG config"
                },
                "interfacePrefix": {
                  "type": "string",
                  "description": "AWG interface name prefix (kernel auto-numbers: prefix0, prefix1, etc.)",
                  "default": "awg-cfd"
                }
              }
            }
          }
        }
      }
    },
    "controller": {
      "type": "object",
      "description": "Controller configuration",
      "properties": {
        "gatewayClassName": {
          "type": "string",
          "description": "GatewayClass name to watch",
          "default": "cloudflare-tunnel"
        },
        "controllerName": {
          "type": "string",
          "description": "Controller name for GatewayClass",
          "default": "cf.k8s.lex.la/tunnel-controller"
        },
        "clusterDomain": {
          "type": "string",
          "description": "Kubernetes cluster domain (auto-detected if empty)"
        },
        "logLevel": {
          "type": "string",
          "description": "Log level",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info"
        },
        "logFormat": {
          "type": "string",
          "description": "Log format",
          "enum": ["json", "text"],
          "default": "json"
        }
      }
    },
    "leaderElection": {
      "type": "object",
      "description": "Leader election configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable leader election",
          "default": false
        },
        "namespace": {
          "type": "string",
          "description": "Namespace for leader election lease"
        },
        "leaseName": {
          "type": "string",
          "description": "Name of the leader election lease",
          "default": "cloudflare-tunnel-gateway-controller-leader"
        }
      }
    },
    "image": {
      "type": "object",
      "description": "Container image configuration",
      "properties": {
        "repository": {
          "type": "string",
          "default": "ghcr.io/lexfrei/cloudflare-tunnel-gateway-controller"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        },
        "tag": {
          "type": "string",
          "description": "Overrides appVersion"
        }
      }
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "name": {
          "type": "string"
        }
      }
    },
    "podAnnotations": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "podLabels": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 0
        },
        "runAsGroup": {
          "type": "integer",
          "minimum": 0
        },
        "fsGroup": {
          "type": "integer",
          "minimum": 0
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["RuntimeDefault", "Localhost"]
            },
            "localhostProfile": {
              "type": "string"
            }
          }
        }
      }
    },
    "securityContext": {
      "type": "object",
      "description": "Container security context",
      "properties": {
        "allowPrivilegeEscalation": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 0
        },
        "runAsGroup": {
          "type": "integer",
          "minimum": 0
        },
        "readOnlyRootFilesystem": {
          "type": "boolean"
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "add": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "Container resource requirements"
    },
    "nodeSelector": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "tolerations": {
      "type": "array"
    },
    "affinity": {
      "type": "object"
    },
    "topologySpreadConstraints": {
      "type": "array"
    },
    "priorityClassName": {
      "type": "string"
    },
    "dnsPolicy": {
      "type": "string",
      "enum": ["", "ClusterFirst", "Default", "ClusterFirstWithHostNet", "None"],
      "description": "DNS policy for pod"
    },
    "dnsConfig": {
      "type": "object",
      "description": "Custom DNS configuration for pod",
      "properties": {
        "nameservers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "searches": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "podDisruptionBudget": {
      "type": "object",
      "description": "PodDisruptionBudget configuration for high availability",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "minAvailable": {
          "oneOf": [
            {"type": "integer", "minimum": 0},
            {"type": "string", "pattern": "^[0-9]+%$"},
            {"type": "null"}
          ],
          "description": "Minimum number of available pods"
        },
        "maxUnavailable": {
          "oneOf": [
            {"type": "integer", "minimum": 0},
            {"type": "string", "pattern": "^[0-9]+%$"},
            {"type": "null"}
          ],
          "description": "Maximum number of unavailable pods"
        },
        "unhealthyPodEvictionPolicy": {
          "type": ["string", "null"],
          "enum": ["IfHealthyBudget", "AlwaysAllow", null],
          "description": "Policy for evicting unhealthy pods (requires Kubernetes 1.26+)"
        }
      }
    },
    "terminationGracePeriodSeconds": {
      "type": "integer",
      "minimum": 0,
      "default": 30,
      "description": "Termination grace period in seconds"
    },
    "healthProbes": {
      "type": "object",
      "description": "Health probes configuration",
      "properties": {
        "startupProbe": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "initialDelaySeconds": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "periodSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 5
            },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 3
            },
            "failureThreshold": {
              "type": "integer",
              "minimum": 1,
              "default": 12
            }
          }
        },
        "livenessProbe": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "initialDelaySeconds": {
              "type": "integer",
              "minimum": 0,
              "default": 15
            },
            "periodSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 20
            },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 5
            },
            "failureThreshold": {
              "type": "integer",
              "minimum": 1,
              "default": 3
            }
          }
        },
        "readinessProbe": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "initialDelaySeconds": {
              "type": "integer",
              "minimum": 0,
              "default": 5
            },
            "periodSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 10
            },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 3
            },
            "failureThreshold": {
              "type": "integer",
              "minimum": 1,
              "default": 3
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "metricsPort": {
          "type": "integer",
          "default": 8080
        },
        "healthPort": {
          "type": "integer",
          "default": 8081
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Service annotations (e.g., Prometheus scraping)"
        }
      }
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "interval": {
          "type": "string"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "ingress": {
          "type": "object",
          "properties": {
            "from": {
              "type": "array",
              "description": "Allow ingress from specific namespaces/pods"
            }
          }
        },
        "cloudflareIpRanges": {
          "type": "object",
          "description": "Cloudflare IP ranges for egress NetworkPolicy",
          "properties": {
            "ipv4": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$"
              },
              "description": "IPv4 CIDR ranges"
            },
            "ipv6": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[0-9a-fA-F:]+/[0-9]{1,3}$"
              },
              "description": "IPv6 CIDR ranges"
            }
          }
        }
      }
    },
    "gatewayClass": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Create GatewayClass resource",
          "default": true
        }
      }
    }
  }
}
