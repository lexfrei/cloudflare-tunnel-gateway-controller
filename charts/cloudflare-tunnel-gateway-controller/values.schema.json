{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["cloudflare"],
  "properties": {
    "cloudflare": {
      "type": "object",
      "description": "Cloudflare configuration",
      "properties": {
        "tunnelId": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9-]*$",
          "description": "Cloudflare Tunnel ID (required at install time)"
        },
        "accountId": {
          "type": "string",
          "description": "Cloudflare Account ID (auto-detected if not specified)"
        },
        "apiToken": {
          "type": "string",
          "description": "Cloudflare API token"
        },
        "apiTokenSecretName": {
          "type": "string",
          "description": "Existing secret name containing API token (key: api-token)"
        }
      }
    },
    "controller": {
      "type": "object",
      "description": "Controller configuration",
      "properties": {
        "gatewayClassName": {
          "type": "string",
          "description": "GatewayClass name to watch",
          "default": "cloudflare-tunnel"
        },
        "controllerName": {
          "type": "string",
          "description": "Controller name for GatewayClass",
          "default": "cf.k8s.lex.la/tunnel-controller"
        },
        "clusterDomain": {
          "type": "string",
          "description": "Kubernetes cluster domain",
          "default": "cluster.local"
        },
        "logLevel": {
          "type": "string",
          "description": "Log level",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info"
        },
        "logFormat": {
          "type": "string",
          "description": "Log format",
          "enum": ["json", "text"],
          "default": "json"
        }
      }
    },
    "manageCloudflared": {
      "type": "object",
      "description": "Cloudflared deployment management via Helm",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Deploy and manage cloudflared via Helm",
          "default": false
        },
        "tunnelToken": {
          "type": "string",
          "description": "Tunnel token for remote-managed mode"
        },
        "tunnelTokenSecretName": {
          "type": "string",
          "description": "Existing secret name containing tunnel token (key: tunnel-token)"
        },
        "namespace": {
          "type": "string",
          "description": "Namespace for cloudflared deployment",
          "default": "cloudflare-tunnel-system"
        },
        "protocol": {
          "type": "string",
          "description": "Transport protocol",
          "enum": ["", "auto", "quic", "http2"]
        }
      }
    },
    "awg": {
      "type": "object",
      "description": "AmneziaWG sidecar configuration",
      "properties": {
        "secretName": {
          "type": "string",
          "description": "Secret name containing AWG config"
        },
        "interfaceName": {
          "type": "string",
          "description": "AWG interface name",
          "default": "awg-cfd-gw-ctrl0"
        }
      }
    },
    "image": {
      "type": "object",
      "description": "Container image configuration",
      "properties": {
        "repository": {
          "type": "string",
          "default": "ghcr.io/lexfrei/cloudflare-tunnel-gateway-controller"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        },
        "tag": {
          "type": "string",
          "description": "Overrides appVersion"
        }
      }
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "name": {
          "type": "string"
        }
      }
    },
    "podAnnotations": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "podLabels": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 1
        },
        "runAsGroup": {
          "type": "integer",
          "minimum": 1
        },
        "fsGroup": {
          "type": "integer",
          "minimum": 1
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["RuntimeDefault", "Localhost"]
            },
            "localhostProfile": {
              "type": "string"
            }
          }
        }
      }
    },
    "securityContext": {
      "type": "object",
      "description": "Container security context",
      "properties": {
        "allowPrivilegeEscalation": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 0
        },
        "runAsGroup": {
          "type": "integer",
          "minimum": 0
        },
        "readOnlyRootFilesystem": {
          "type": "boolean"
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "add": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "Container resource requirements"
    },
    "nodeSelector": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "tolerations": {
      "type": "array"
    },
    "affinity": {
      "type": "object"
    },
    "topologySpreadConstraints": {
      "type": "array"
    },
    "priorityClassName": {
      "type": "string"
    },
    "dnsPolicy": {
      "type": "string",
      "enum": ["", "ClusterFirst", "Default", "ClusterFirstWithHostNet", "None"],
      "description": "DNS policy for pod"
    },
    "dnsConfig": {
      "type": "object",
      "description": "Custom DNS configuration for pod",
      "properties": {
        "nameservers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "searches": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "podDisruptionBudget": {
      "type": "object",
      "description": "PodDisruptionBudget configuration for high availability",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "minAvailable": {
          "oneOf": [
            {"type": "integer", "minimum": 0},
            {"type": "string", "pattern": "^[0-9]+%$"},
            {"type": "null"}
          ],
          "description": "Minimum number of available pods"
        },
        "maxUnavailable": {
          "oneOf": [
            {"type": "integer", "minimum": 0},
            {"type": "string", "pattern": "^[0-9]+%$"},
            {"type": "null"}
          ],
          "description": "Maximum number of unavailable pods"
        },
        "unhealthyPodEvictionPolicy": {
          "type": ["string", "null"],
          "enum": ["IfHealthyBudget", "AlwaysAllow", null],
          "description": "Policy for evicting unhealthy pods (requires Kubernetes 1.26+)"
        }
      }
    },
    "terminationGracePeriodSeconds": {
      "type": "integer",
      "minimum": 0,
      "default": 30,
      "description": "Termination grace period in seconds"
    },
    "healthProbes": {
      "type": "object",
      "description": "Health probes configuration",
      "properties": {
        "startupProbe": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "initialDelaySeconds": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "periodSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 5
            },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 3
            },
            "failureThreshold": {
              "type": "integer",
              "minimum": 1,
              "default": 12
            }
          }
        },
        "livenessProbe": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "initialDelaySeconds": {
              "type": "integer",
              "minimum": 0,
              "default": 15
            },
            "periodSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 20
            },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 5
            },
            "failureThreshold": {
              "type": "integer",
              "minimum": 1,
              "default": 3
            }
          }
        },
        "readinessProbe": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "initialDelaySeconds": {
              "type": "integer",
              "minimum": 0,
              "default": 5
            },
            "periodSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 10
            },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 3
            },
            "failureThreshold": {
              "type": "integer",
              "minimum": 1,
              "default": 3
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "metricsPort": {
          "type": "integer",
          "default": 8080
        },
        "healthPort": {
          "type": "integer",
          "default": 8081
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Service annotations (e.g., Prometheus scraping)"
        }
      }
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "interval": {
          "type": "string"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "ingress": {
          "type": "object",
          "properties": {
            "from": {
              "type": "array",
              "description": "Allow ingress from specific namespaces/pods"
            }
          }
        },
        "cloudflareIpRanges": {
          "type": "object",
          "description": "Cloudflare IP ranges for egress NetworkPolicy",
          "properties": {
            "ipv4": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$"
              },
              "description": "IPv4 CIDR ranges"
            },
            "ipv6": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[0-9a-fA-F:]+/[0-9]{1,3}$"
              },
              "description": "IPv6 CIDR ranges"
            }
          }
        }
      }
    },
    "gatewayClass": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Create GatewayClass resource",
          "default": true
        }
      }
    }
  }
}
